<h1>タスク一覧</h1>

<% if @tasks.any? %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>ステータス</th>
      <th>メッセージ</th>
    </tr>
  </thead>
  <tbody>
    
     <% @tasks.each do |task| %>
     
     <tr>
       <td>
         
          <%= link_to task.id, task %>
       </td>
       
       <td>
          <%= task.status %>
       </td>
        <td>
<%= task.content %>
</td>
        </tr>
      
<% end %>

    </tbody>
  </table>
  <div>
    
   

  </div>
<% end %>

<% if logged_in? %>
  <div class="row">
    <div class="col-xs-8">
    </div>
  </div>
<% else %>

 <div class="text-center">
   
<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
  
<% end %>  